; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{sh,sql}]
indent_style = tab

[*.{erb,json,js,pp,rb,sql,tf,toml,twig,xlf,xml,yaml,yml}]
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_style = tab

[Dockerfile]
indent_style = tab

[Vagrantfile]
indent_size = 2
